<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Static Navigation - SB Admin</title>
    <link href="~/Css/styles.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/js/all.min.js" crossorigin="anonymous"></script>
    <link href="~/Css/custom.css" rel="stylesheet" />
</head>
<body>
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <a class="navbar-brand" href="/User/Index">MENU</a>
        <button class="btn btn-link btn-sm order-1 order-lg-0" id="sidebarToggle" href="#"></button>
    </nav>
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <a class="nav-link" href="/User/Index">
                            <div class="sb-nav-link-icon"></div>
                            User
                        </a>
                    </div>
                    <div class="sb-sidenav-menu-heading">Sort</div>
                    <a class="nav-link" href="/User/IndexSortByID">
                        <div class="sb-nav-link-icon"></div>
                        By ID
                    </a>
                    <a class="nav-link" href="/User/IndexSortByGrID">
                        <div class="sb-nav-link-icon"></div>
                        By GrID
                    </a>
                    <a class="nav-link" href="/User/IndexSort">
                        <div class="sb-nav-link-icon"></div>
                        Bold
                    </a>
            </nav>
        </div>
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid">
                    <h2 class="mt-4">@RenderSection("header", required: true)</h2>
                    @RenderBody()
                </div>
            </main>
        </div>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
